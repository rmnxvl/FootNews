{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1>Modifier la compétition</h1>
    <form method="post" class="mt-4">
        <div class="form-group">
            <label for="title">Titre</label>
            <input type="text" id="title" name="title" class="form-control" value="{{ competition.title }}" required>
        </div>
        <div class="form-group mt-3">
            <label for="countryName">Nom du pays</label>
            <input type="text" id="countryName" name="countryName" class="form-control" value="{{ competition.countryName }}" required>
        </div>
        <div class="form-group mt-3">
            <label for="competitionLogo">Logo de la compétition</label>
            <input type="text" id="competitionLogo" name="competitionLogo" class="form-control" value="{{ competition.competitionLogo }}">
        </div>
        <div class="form-group mt-3">
            <label for="countryLogo">Logo du pays</label>
            <input type="text" id="countryLogo" name="countryLogo" class="form-control" value="{{ competition.countryLogo }}">
        </div>
        <button type="submit" class="btn btn-primary mt-3">Enregistrer</button>
        <a href="{{ path('competition_index') }}" class="btn btn-secondary mt-3">Retour</a>
    </form>
</div>
{% endblock %}