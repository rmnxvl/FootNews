{% block body %}
    <div class="container text-center">
        <h1 class="mt-5 text-danger">Accès Refusé</h1>
        <p class="mt-3">Vous n'avez pas les permissions nécessaires pour accéder à cette page.</p>
        <p class="mt-3">Redirection vers la page d'accueil dans <span id="countdown">3</span> secondes...</p>
        <a href="{{ path('app_login') }}" class="btn btn-primary mt-3">Retour à la connexion</a>
    </div>

    <script>
        let count = 3;
        const countdownElement = document.getElementById("countdown");

        const countdown = setInterval(() => {
            count--;
            countdownElement.textContent = count;
            if (count === 0) {
                clearInterval(countdown);
                window.location.href = "{{ path('app_home') }}"; // Redirection vers la page d'accueil
            }
        }, 1000);
    </script>
{% endblock %}