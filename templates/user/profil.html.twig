{% extends 'base.html.twig' %}

{% block title %} Profil | FootNews{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/profil.css') }}">
{% endblock %}

{% block body %}
<div class="container mt-5">

    {# ✅ Messages de succès ou d'erreur #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    {# ✅ Formulaire de modification avec upload de photo de profil #}
    <form method="post" action="{{ path('user_edit', {'id': user.id}) }}" enctype="multipart/form-data">
        <div class="mb-3 text-center">
            {% if user.profilePicture %}
                <img src="{{ asset('uploads/profile_pictures/' ~ user.profilePicture) }}" alt="Photo de profil" width="120" class="profile-page-img rounded-circle mb-3">
            {% else %}
                <img src="{{ asset('images/default-avatar.png') }}" alt="Photo de profil par défaut" width="120" class="profile-page-img rounded-circle mb-3">
            {% endif %}
        </div>

        <div class="mb-3">
            <label for="profile_picture" class="form-label">Changer la photo de profil :</label>
            <input type="file" id="profile_picture" name="profile_picture" class="form-control">
        </div>

        <div class="mb-3">
            <label for="username" class="form-label">Pseudo :</label>
            <input type="text" id="username" name="username" value="{{ user.username }}" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email :</label>
            <input type="email" id="email" name="email" value="{{ user.email }}" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Nouveau mot de passe :</label>
            <input type="password" id="password" name="password" class="form-control">
            <small class="form-text text-muted">Laisse vide si tu ne veux pas changer ton mot de passe.</small>
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
    </form>
    <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Es-tu sûr de vouloir supprimer ton compte ?');">
        <button type="submit" class="btn btn-danger mt-3">Supprimer mon compte</button>
    </form>
</div>
{% endblock %}