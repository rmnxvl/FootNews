{% extends 'base.html.twig' %}

{% block title %}Contact | FootNews{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/contact.css') }}">
{% endblock %}

{% block body %}
<main>
    <div class="formulaire-de-contact">
        <div class="contact-form">
            <h2>Contact</h2>
            <p>Besoin d'aide ? Contactez-nous en remplissant ce formulaire.</p>
            
            {# Affiche les messages flash #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            
            {# Affiche le formulaire Symfony #}
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.identifiant) }}
                    {{ form_widget(form.identifiant) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.sujet) }}
                    {{ form_widget(form.sujet) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.message) }}
                    {{ form_widget(form.message) }}
                </div>
                <div class="button-group">
                    {{ form_widget(form.submit) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</main>
{% endblock %}