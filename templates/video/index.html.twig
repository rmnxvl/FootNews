{% extends 'base.html.twig' %}

{% block title %}Gestion des Vid√©os | FootNews{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/video-crud.css') }}"> 
{% endblock %}

{% block body %}
    <div class="crud-container">
        <h2>Gestion des Vid√©os</h2>

        <!-- Formulaire d'ajout/modification -->
        <div class="crud-form">
            <h3>{{ editId is defined and editId ? 'Modifier une vid√©o' : 'Ajouter une vid√©o' }}</h3>
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary">{{ editId is defined and editId ? 'Mettre √† jour' : 'Ajouter' }}</button>
            {{ form_end(form) }}

            {% if editForm is defined and editForm %}
                <h3>Modifier la vid√©o existante</h3>
                {{ form_start(editForm) }}
                    {{ form_widget(editForm) }}
                    <button type="submit" class="btn btn-primary">Mettre √† jour</button>
                {{ form_end(editForm) }}
            {% endif %}
        </div>

        <!-- Liste des vid√©os -->
        <div class="video-list">
            {% if videos is empty %}
                <p>Aucune vid√©o disponible pour le moment.</p>
            {% else %}
                {% for video in videos %}
                    <div class="video-card">
                        <h3>{{ video.title }}</h3>
                        {% set youtubeId = video.youtubeUrl|split('v=')[1]|split('&')[0] %}
                        <iframe 
                            src="https://www.youtube.com/embed/{{ youtubeId }}" 
                            frameborder="0" 
                            allowfullscreen>
                        </iframe>
                        <p class="video-date">üóìÔ∏è Ajout√©e le {{ video.createdAt|date('d/m/Y H:i') }}</p>
                        <div class="video-actions">
                            <a href="{{ path('admin_video_index', {'edit': video.id}) }}" class="btn btn-secondary">Modifier</a>
                            <form method="post" action="{{ path('admin_video_index', {'delete': video.id}) }}" class="delete-form" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette vid√©o ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ video.id) }}">
                                <button type="submit">Supprimer</button>
                            </form>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    {% block javascripts %}
        <script>
            // Gestion dynamique des liens de modification
            document.addEventListener('DOMContentLoaded', function() {
                const editLinks = document.querySelectorAll('.btn-secondary');
                editLinks.forEach(link => {
                    link.addEventListener('click', function(e) {
                        e.preventDefault();
                        const url = this.getAttribute('href');
                        window.location.href = url;
                    });
                });
            });
        </script>
    {% endblock %}
{% endblock %}