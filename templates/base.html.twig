        <i class="fa fa-search"></i>
    </a>
{% if app.user %}
    <div class="dropdown-profil">
        <button class="dropbtn-profil">
            {% if app.user.profilePicture is not empty %}
                <img src="{{ asset('uploads/profile_pictures/' ~ app.user.profilePicture) }}" alt="Photo de profil" class="nav-profile-img navbar-profile-img">
            {% else %}
                <img src="{{ asset('images/default-avatar.png') }}" alt="Avatar par défaut" class="nav-profile-img navbar-profile-img">
            {% endif %}
        </button>

        <div class="dropdown-content-profil">
            <a href="{{ path('user_profil') }}">Mon Compte</a>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('user_index') }}">CRUD Utilisateurs</a>
                <a href="{{ path('article_index') }}">CRUD Articles</a>
                <a href="{{ path('admin_article_create') }}">CRUD Équipes</a>
