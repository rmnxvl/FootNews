{% extends 'base.html.twig' %}

{% block title %}Modifier une Vidéo | FootNews{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/video-edit.css') }}"> 
{% endblock %}

{% block body %}
    <div class="crud-container">
        <h1 class="crud-title">Modifier une Vidéo</h1>

        <!-- Messages flash pour informer l'utilisateur -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <!-- Formulaire de modification -->
        <div class="crud-form-card">
            <h2>Modifier la vidéo : {{ video.title }}</h2>
            {{ form_start(form, {'attr': {'class': 'video-edit-form'}}) }}
                <div class="form-group">
                    {{ form_label(form.title, 'Titre de la vidéo') }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.title) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.youtubeUrl, 'URL YouTube') }}
                    {{ form_widget(form.youtubeUrl, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.youtubeUrl) }}
                </div>
                <div class="form-actions">
                    <a href="{{ path('admin_video_index') }}" class="btn btn-secondary">Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}