{% extends 'base.html.twig' %}

{% block title %}Modifier l'équipe {{ equipe.nom }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Modifier l'équipe {{ equipe.nom }}</h1>

        <form action="{{ path('admin_equipe_edit', { id: equipe.id }) }}" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="nom" class="form-label">Nom de l'équipe</label>
                <input type="text" id="nom" name="nom" class="form-control" value="{{ equipe.nom }}" required>
            </div>

            <div class="mb-3">
                <label for="pays" class="form-label">Pays de l'équipe</label>
                <input type="text" id="pays" name="pays" class="form-control" value="{{ equipe.pays }}">
            </div>

            <div class="mb-3">
                <label for="logo" class="form-label">Logo de l'équipe</label>
                {% if equipe.logo %}
                    <div class="mb-2">
                        <img src="{{ asset(equipe.logo) }}" alt="Logo actuel" class="img-fluid" style="max-width: 200px;">
                    </div>
                {% endif %}
                <input type="file" id="logo" name="logo" class="form-control">
            </div>

            <button type="submit" class="btn btn-success">Enregistrer</button>
            <a href="{{ path('admin_equipe_index') }}" class="btn btn-secondary">Annuler</a>
        </form>
    </div>
{% endblock %}
